# Roommate Agreement Generator Environment
# Copy this file to .env and fill in your values

# Application
DEBUG=true

# Database (MySQL)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/roomate

# Azure Storage (optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=

# Azure AD B2C (optional)
AZURE_AD_B2C_TENANT=
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_POLICY=B2C_1_signupsignin

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Coinbase Commerce (optional)
COINBASE_COMMERCE_KEY=
COINBASE_COMMERCE_WEBHOOK_SECRET=

# DocuSign (optional)
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi
DOCUSIGN_ACCESS_TOKEN=
DOCUSIGN_ACCOUNT_ID=

# Azure Communication Services (optional)
ACS_CONNECTION_STRING=
ACS_SENDER_EMAIL=noreply@example.com

# Frontend URL
FRONTEND_URL=http://localhost:3000
